<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/about_banner.jpg);background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px">员工园地</h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:400px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:25%;background:url('../images/header.png');background-position:center" >
        <h3>搜索员工动态</h3>
        <!-- <input type="search" placeholder="请输入关键字" size="16" />
        <input class="ipacro-button" style="font-weight: bolder; zoom: 1;" type="submit" value="搜索"> -->
        <%= form_tag activities_search_path, :method => 'get' do %>
          <%= text_field_tag :key, params[:key], type:"search",placeholder:"请输入关键字",size:"20"%>
          <%= submit_tag "搜索", :name => nil, class:"ipacro-button" %>
        <% end %> 
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width: 75%" >
        <div class="layout-item-2" style="min-height:300px;">
          <h3>员工园地</h3>
          <ul>
            <% @activities.each do |activity| %>
              <li style="font-size:1.1em">
                <%= link_to activity.title, activity %>
              </li>
            <%end%>            
          </ul>
          <%= paginate @activities %>
        </div>
      </div>
    </div>
  </div>
</div>