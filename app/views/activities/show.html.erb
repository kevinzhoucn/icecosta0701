<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(
      <% if @activity_bar_image && @activity_bar_image.picture && @activity_bar_image.picture.avatar %>
        <%= @activity_bar_image.picture.avatar.url %>
      <% end %>
      );background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('/images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('activities')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:300px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:25%;background:url('/images/header.png');background-position:center">
      <!-- <div style="width:100%;height:140px;background-image:url(
        <% if @activity_content_image && @activity_content_image.picture && @activity_content_image.picture.avatar %>
          <%= @activity_content_image.picture.avatar.url %>
        <% end %>
        );background-size:100%;" >
      </div> -->
        <%= form_tag activities_search_path, :method => 'get' do %>
          <%= text_field_tag :key, params[:key], type:"search",placeholder:t('Search for Activities'),size:"18",style:"margin-left:20px"%>
          <%= submit_tag t('Search'), :name => nil, class:"ipacro-button" %>
        <% end %> 
      </div>
      <div class="ipacro-layout-cell layout-item-0" >
        <div class="layout-item-2 page-curl" style="min-height:300px">
          <h6 style="margin:2px 0 2px 0">
            <%=t('urhere')%><a href="<%= root_path%>"><%=t('home')%></a> > <a href="../activities"><%=t('activities')%></a> > <%=@activity.title%>
          <hr>
          </h6>
          <%=@activity.content.html_safe%>
        </div>
      </div>
    </div>
  </div>
  <%= render partial:'common/misc/totop'%>
</div>