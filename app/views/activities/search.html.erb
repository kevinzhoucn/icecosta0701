<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/about_banner.jpg);background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('/images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('Activities')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:400px";>
    <div class="ipacro-content-layout-row">
      <div class="layout-item-2" style="min-height:300px">
        <h3><%=t('Searching Result')%></h3>
        <ul>
        <% @activities.each do |activity| %>
          <li style="font-size:1.1em">
            <%= link_to activity.title, activity %>
            <% if activity.created_at %>
              <sub><%=t('Published On')%>ï¼š<%= activity.created_at.strftime('%Y-%m-%d') %></sub>
            <% end %>
          </li>
        <%end%>
      </ul>
      <%= paginate @activities %>
      </div>
        <p>
    <a class="ipacro-button" onclick="window.history.go(-1)"><%=t('Back')%></a>
  </p>
    </div>
  </div>
</div>