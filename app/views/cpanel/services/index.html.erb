<div>
  <h2 class="header">q 服务项目管理</h2>
  <div class="monitor">
    <div class="clearfix">
      <div style="min-height:40px;line-height:40px;"> 
        <li style="margin:0 30px;float:left">服务项目列表</li>
        <li style="font-family: 'icomoon'">
          <%= link_to 'q 添加',new_cpanel_service_path,style:'color:#fff;text-decoration:none;font-size:14px;float:right;margin:0 30px;padding:1px 5px',class:'submitbutton' %>
        </li>
      </div>
      <div style="border:1px solid rgb(235,235,235);margin: 10px 40px;border-radius:5px;heigh:auto;overflow:hidden">
        <ul style="width:100%">
        <% @services.each do |service| %>
          <li>
            <%= link_to service.title, edit_cpanel_service_path(service) %>
            <span style="position: absolute;right:340px">
            <%= link_to 'X  删除', cpanel_service_path(service), method: :delete, data: { confirm: '确定要删除这条记录吗？' }, class:'submitbutton' %>
            </span>
          </li>
        <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>