<%= simple_form_for([:cpanel, @service]) do |f| %>
  <%= f.error_notification %>

   <div class="form-inputs" style="margin:5px;font-size:12px;color:gray">
    <%= f.input :title,label:'服务名称：' %>
    <br>
    <span>选择语言：</span>
    <%= f.input_field :lang, as: :radio_buttons, collection:[ ['不  限 ','world'],['中  文 ', 'cn'],['英  文 ','en'] ], checked: 'world'%>
    <br>
    <br>
    <%= f.text_area :content,label:'服务内容：' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, " 发 布 ",class:"submitbutton",style:'padding:1px 5px'%>
    <button class="submitbutton" style="padding:1px 10px;margin:0px 15px" onclick="window.history.go(-1);return false;">取 消</button>
  </div>
<% end %>
<script>
 CKEDITOR.replace('service_content',{
  "extraPlugins": "imagebrowser",
  "imageBrowser_listUrl": "/ckeditor/pictures/image_list.json"
});
</script>
