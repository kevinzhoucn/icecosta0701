<h1>Listing abouts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Lang</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @abouts.each do |about| %>
      <tr>
        <td><%= about.title %></td>
        <td><%= about.content %></td>
        <td><%= about.lang %></td>
        <td><%= link_to 'Show', cpanel_about_path(about) %></td>
        <td><%= link_to 'Edit', edit_cpanel_about_path(about) %></td>
        <td><%= link_to 'Destroy', cpanel_about_path(about), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

