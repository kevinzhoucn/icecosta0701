<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%">
        <h6>
          当前位置：<%=link_to '加入我们', positions_path%>><%=@position.title%>
        </h6>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/services.jpg);background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px">加入我们</h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%">
        <div class="layout-item-2" style="margin-top:1em;min-height:300px">
          <h3>
            <%=@position.title%>
          </h3>
          <hr>
          <%=@position.content.html_safe%>
        </div>
      </div>
    </div>
  </div>
  <p>
    <a class="ipacro-button" onclick="window.history.go(-1)">返回</a>
    <%= link_to '在线申请', new_position_resume_path(@position),class:"ipacro-button" %>
  </p>
</div>