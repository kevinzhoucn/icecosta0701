<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/join_us.jpg);background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('/images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('Join_us')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:400px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:25%;background:url('/images/header.png');background-position:center">
        <%= form_tag positions_search_path, :method => 'get' do %>
          <%= text_field_tag :key, params[:key],type:"search", placeholder:t('Search_Positions'), size:"18",style:"margin-left:20px" %>
          <%= submit_tag t('Search'), :name => nil ,class:"ipacro-button"%>
        <% end %>
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width:75%">
        <div class="layout-item-2" style="min-height:350px">
          <ul>
          <% @positions.each do |position| %>
            <li>
              <%= link_to position.title, position %>&nbsp;&nbsp;
              <% if position.created_at %>
                  &nbsp;&nbsp;<sub><%=t('type')%>: <%=position.position_type%>&nbsp;&nbsp;<%=t('Published On')%><%= position.created_at.strftime('%Y-%m-%d') %></sub>
              <% end %>
            </li>
          <%end%>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <%= render partial:'common/misc/totop'%>
</div>