<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(
      <% if @position_bar_image && @position_bar_image.picture && @position_bar_image.picture.avatar %>
        <%= @position_bar_image.picture.avatar.url %>
      <% end %>
      );background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('/images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('positions')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:300px;">
    <div class="ipacro-content-layout-row">
      <div style="width:100%;height:140px;background-image:url(
        <% if @position_content_image && @position_content_image.picture && @position_content_image.picture.avatar %>
          <%= @position_content_image.picture.avatar.url %>
        <% end %>
        );background-size:100%;" >
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width:25%;background:url('/images/header.png');background-position:center">
        <%= form_tag positions_search_path, :method => 'get' do %>
          <%= text_field_tag :key, params[:key],type:"search", placeholder:t('Search_Positions'), size:"18",style:"margin-left:20px" %>
          <%= submit_tag t('Search'), :name => nil ,class:"ipacro-button"%>
        <% end %>
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width:75%">
        <div class="layout-item-2 page-curl" style="min-height:300px">
          <h6 style="margin:2px 0 2px 0">
            <%=t('urhere')%><a href="<%= root_path%>"><%=t('home')%></a> > <%=t('positions')%></a> > 
          <hr>
          </h6>
          <table style="margin-top:10px">
            <% @positions.each do |position| %>
              <tr class="list">
                <td  style="width:200px;word-break:break-all;">
                  <%= link_to position.title, position %>
                </td>
                <td width="150">
                <%=t('type')%>: <%=position.position_type%>
                </td>
                <td>
                <% if position.created_at %>
                  <% if position.created_at %>
                    <%=t('Published On')%><%= position.created_at.strftime('%Y-%m-%d') %>
                <% end %>
                  <%else%>
                  &nbsp;
                <% end %>
                </td>
              </tr>
            <% end %>
          </table>
          <%= paginate @positions %>
        </div>
      </div>
    </div>
  </div>
</div>