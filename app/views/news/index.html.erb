<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/services.jpg);background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px">资讯发布</h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:400px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:25%;background:url('../images/header.png');background-position:center" >
        <h3>搜索快讯</h3>
        <%= form_tag news_search_path, :method => 'get' do %>
          <%= text_field_tag :key, params[:key],type:"search", placeholder:"请输入关键字", size:"20" %>
          <%= submit_tag "搜索", :name => nil ,class:"ipacro-button"%>
        <% end %>
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width: 75%" >
        <div class="layout-item-2" style="min-height:300px">
          <h3>公司快讯</h3>
          <ul>
            <% @news.each do |news| %>
              <li style="font-size:1.1em">
                <%= link_to news.title, news %>
                <% if news.created_at %>
                  &nbsp;&nbsp;&nbsp;&nbsp;<sub>发布时间：<%= news.created_at.strftime('%Y-%m-%d') %></sub>
                <% end %>
              </li>
            <%end%>
          </ul>
          <%= paginate @news %>
        </div>        
      </div>
    </div>
  </div>
</div>