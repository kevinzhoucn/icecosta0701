<%= simple_form_for(@news) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :news_type %>
  </div>

  <div class="form-actions">
    <%= link_to '返回', news_index_path,class:"ipacro-button"%>|
    <%= f.button :submit, "添加",class:"ipacro-button", style:"font-weight:bolder"%>
  </div>
<% end %>
