<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(
      <% if @news_bar_image && @news_bar_image.picture && @news_bar_image.picture.avatar %>
        <%= @news_bar_image.picture.avatar.url %>
      <% end %>
      );background-size:100%;" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('/images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('news')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:300px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:25%;background:url('/images/header.png');background-position:center">
        <%= render partial:'common/leftnav/news_left'%>
      </div>
      <div class="layout-item-2 page-curl" style="min-height:300px">
        <h3><%=t('Searching Result')%></h3>
        <hr>
        <table style="margin-top:10px">
          <% @news.each do |news| %>
            <tr class="list">
              <td  style="width:450px;word-break:break-all;">
                <%= link_to news.title, news %>
              </td>
              <td>
              <% if news.created_at %>
                <%=t('Published On')%>:&nbsp;<%= news.created_at.strftime('%Y-%m-%d') %>
                <%else%>
                &nbsp;
              <% end %>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate @news %>
      </div>
      
    </div>
  </div>
  <%= render partial:'common/misc/totop'%>
</div>