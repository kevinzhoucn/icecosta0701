<%= simple_form_for([:position, @resume]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title,label:t('name') %>
    <%= f.input :content,label:t('PS') %>
    <br>
    <%= f.input :avatar, label: t('resume_upload') %>
    <br>
  </div>

  <div class="form-actions">
    <button class="ipacro-button" onclick="window.history.go(-1)"><%=t('Back')%></button>
    <%= f.button :submit , class:'ipacro-button', value:t('submit'),style:'font-size:1.2em'%>
  </div>
<% end %>
