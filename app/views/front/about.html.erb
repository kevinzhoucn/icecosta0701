<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/about_banner.jpg);background-size:100%;" >
        <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('about')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:400px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width: 30%">
        <% if @about_image && @about_image.avatar %>
          <img src="<%= @about_image.avatar.url %> " style="margin-right: 10px; float: left;" width="100%">
        <% end %>
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width: 70%">
        <div style="word-wrap:break-word">
          <% if @about_locale %>
            <%= @about_locale.html_safe %>
          <%end%>
        </div>
        
      </div>
    </div>
  </div>
</div>
