<style type="text/css">
  #aboutcontent{word-wrap:break-word;}
  #aboutcontent p{margin:0;}
  .fixed_div{position:fixed;top:0;}
</style>
<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(/images/about_banner.jpg);background-size:100%;" >
        <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('about')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:350px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:303px;margin-right:2px">
        <% if @about_image && @about_image.avatar %>
          <img src="<%= @about_image.avatar.url %> " style="margin-right: 10px; float: left;width:300px;padding:0;margin:0" id="about_image">
        <% end %>
      </div>
      <div class="ipacro-layout-cell layout-item-0" id="aboutcontent" style="width:687px;padding:0 5px">
        <% if @about_locale %>
          <%= @about_locale.html_safe %>
        <%end%>
      </div>
    </div>
  </div>
  <%= render partial:'common/misc/totop'%>
</div>
<script type="text/javascript">
  $(document).ready(function(){
  $(document).on('scroll', function(){
    $('#about_image').toggleClass('fixed_div',$(document).scrollTop()>=271);
  })
});
</script>
