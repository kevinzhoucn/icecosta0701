<style type="text/css">
  #aboutcontent{word-wrap:break-word;}
  #aboutcontent p{margin:0;}
  .hide{display:none;}
  .show{position:fixed;top:0;width:998px;display:block;}
  .unseen{visibility:hidden;}
  .visible{visibility:visible;}

</style>
<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="layout-item-0 hide" style="height:140px;background-image:url(
    <% if @about_bar_image && @about_bar_image.picture && @about_bar_image.picture.avatar %>
      <%= @about_bar_image.picture.avatar.url %>
    <% end %>
      );background-size:100%;" id="aboutbanner" >
      <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('about')%></h1>
  </div>
  <div class="ipacro-content-layout" id="oldbanner">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(
      <% if @about_bar_image && @about_bar_image.picture && @about_bar_image.picture.avatar %>
        <%= @about_bar_image.picture.avatar.url %>
      <% end %>
      );background-size:100%;" >
        <h1 class="ipacro-headline" style="left:20px;position:relative;border-radius:10px;background:url('../images/nav.png');width:95%;transform:skew(-12deg);line-height:51px;text-indent:15px"><%=t('about')%></h1>
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;min-height:350px;" id="aboutcontent">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;padding:0 5px">
        <% if @about_locale %>
          <%= @about_locale.html_safe %>
        <%end%>
      </div>
    </div>
  </div>
  <div class="">
  <%= render partial:'common/misc/totop'%>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
  $(document).on('scroll', function(){
    $('#aboutbanner').toggleClass('show',$(document).scrollTop()>=122);
    $('#oldbanner').toggleClass('unseen',$(document).scrollTop()>=122);
  })
});
</script>