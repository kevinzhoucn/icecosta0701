<h2>登录控制台</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: '用户名：' %>
    <br>
    <%= f.input :password, required: false, label: '密    码： ' %>
    <%= f.input :remember_me, label: '记住我', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登录",class:'submitbutton',style:'margin:1px 5px;padding:1px 15px' %>
  </div>
<% end %>
