<div id="tobstick">
  <ul id="sidebar">
    <% @abouts.each do |about| %>
      <li style="margin-bottom:5px" id="<%=about.id%>">
      <%if @english %>
        <%= link_to about.title, aboutus_show_path(about), class:"ipacro-button", style:"width:82%;height:30px;line-height:30px;font-size:15px;text-align:left !important" %>
      <%else%>
        <%= link_to about.title, aboutus_show_path(about), class:"ipacro-button", style:"width:82%;height:30px;line-height:30px;font-size:15px;text-align:center !important" %>
      <%end%>
      </li>
    <%end%>
  </ul>
</div>
<script type="text/javascript" src="/js/togglefix.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    var url = document.URL;
    var aboutid = '#'+url.substr(url.length-24,24);
    $(aboutid).addClass("active");
  });
</script>

