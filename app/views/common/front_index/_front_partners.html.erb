<div style="margin: 0px">
  <h3><%=t('partners')%></h3>
  <% Partner.all.each do |partner| %>
    <div style="width:130px;height:70px;overflow:hidden;float:left;border:solid 1px #eee;border-radius:10px;background-size:cover;box-shadow:0 0 15px #558;margin-top:5px">
      <a href="<%="http://"+partner.url%>" target="_blank" style="display:block;width:100%;height:100%">
        <img src="<%= partner.avatar.url(:tile) %>" style="margin:0;padding:0;width:100%">
      </a>
    </div>
  <% end %>
</div>