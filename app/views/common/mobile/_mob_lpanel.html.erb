<style type="text/css">
  .ui-panel-inner>ul>li>a,.ui-panel-inner>ul>li>a:link,.ui-panel-inner>ul>li>a:hover,.ui-panel-inner>ul>li>a:visited{
     color:#3991e5 !important;
  }
</style>
<div data-role="panel" id="thepanel" data-display="overlay" data-position-fixed="true" style="background-color:#3991e5">
    <!-- panel content goes here -->
  <ul data-role="listview">
    <li data-role="separator" style="background-color:#3991e5 !important;color:#fff"><h3><%=t('site_title')%></h3></li>
    <li data-icon="home" data-iconpos="left"><%= link_to t('home'), mobile_path, data:{ajax: "false"},rel:"external" %></li>
    <li data-icon="info"><%= link_to t('about'), mobile_about_path, data:{ajax: "false"},rel:"external" %></li>
    <li data-icon="bullets"><%= link_to t('services'), mobile_services_path, data:{ajax: "false"},rel:"external" %></li>
    <li data-icon="audio"><%= link_to t('news'), mobile_news_path, data:{ajax: "false"},rel:"external" %></li>
    <li data-icon="heart"><%= link_to t('activities'), mobile_activities_path, data:{ajax: "false"},rel:"external" %></li>
    <li data-icon="user"><%= link_to t('positions'), mobile_positions_path, data:{ajax: "false"},rel:"external" %></li>
    <li data-icon="phone"><%= link_to t('contact_us'), mobile_contact_path, data:{ajax: "false"},rel:"external" %></li>
  </ul>
<a data-role="button" data-rel="close" style="margin-top:30px" data-icon="delete" data-mini="true"><%=t('close')%></a>
</div>
