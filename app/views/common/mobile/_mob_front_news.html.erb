<ul data-role="listview" data-inset="true" data-icon="false" class="newsactivities">
  <li data-role="divider">
    <%=t('Top News')%>
  </li>
  <% @front_news.each do |item| %>
    <li>
      <a href="<%=mobile_news_show_path(item)%>">
        <% if item.created_at %>
          <%= item.created_at.strftime('%Y-%m-%d') %>
        <%else%>
          &nbsp;
        <% end %>
        &nbsp;&nbsp;
        <%=item.title%>
      </a>
    </li>
  <% end %>
    <li>
      <%=link_to t('More'), mobile_news_path, data:{role:"button"},data:{inline:"true"},style:"text-align:right"%>
    </li>
</ul>