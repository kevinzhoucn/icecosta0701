<style type="text/css">
  .ipacro-postcontent ul>li:before, .ipacro-post ul>li:before, .ipacro-textblock ul>li:before{content:none; /*去掉li前面的小三角*/}
  .ipacro-postcontent li, .ipacro-post li, .ipacro-textblock li{margin: 0;}/*去掉li外边距*/
  .ipacro-postcontent ul>li.active:after{content:url('/images/postbullets.png')}
  .ipacro-postcontent ul>li.active a{
    background: #479E94;
    background: linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    background: -webkit-linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    background: -moz-linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    background: -o-linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    background: -ms-linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    background: linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    -svg-background: linear-gradient(top, #56B3A8 0, #4FB0A5 14%, #3C867D 100%) no-repeat;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border: 1px solid #949494;
    padding: 0 10px;
    margin: 0 auto;
  }
</style>
<div>
  <ul>
    <% @services.each do |service| %>
      <li style="margin-bottom:5px" id="<%=service.id%>">
        <%= link_to service.title, service, class:"ipacro-button", style:"width:82%;height:30px;line-height:30px;" %>
      </li>
    <%end%>
  </ul>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    var url = document.URL;
    var serviceid = '#'+url.substr(url.length-24,24);
    $(serviceid).addClass("active");
  });
</script>